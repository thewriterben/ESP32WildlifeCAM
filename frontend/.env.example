# ESP32 Wildlife Camera Frontend Environment Configuration

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=http://localhost:5000

# Application Configuration  
REACT_APP_APP_NAME=ESP32 Wildlife Camera
REACT_APP_VERSION=1.0.0

# Features
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# Map Configuration (for camera locations)
REACT_APP_MAP_CENTER_LAT=40.7128
REACT_APP_MAP_CENTER_LNG=-74.0060
REACT_APP_MAP_DEFAULT_ZOOM=10

# Image Configuration
REACT_APP_MAX_IMAGE_SIZE=10485760
REACT_APP_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/gif
REACT_APP_THUMBNAIL_SIZE=200

# Analytics
REACT_APP_ANALYTICS_REFRESH_INTERVAL=30000
REACT_APP_ENABLE_ANALYTICS=true

# Development
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=info

# Theme
REACT_APP_THEME_MODE=light
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e