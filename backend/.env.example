# ESP32 Wildlife Camera Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://wildlife:wildlife123@localhost:5432/wildlife_camera

# Security Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=24  # hours

# File Storage Configuration
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,avi

# Celery Task Queue Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Microsoft MegaDetector Configuration
MEGADETECTOR_MODEL_PATH=./models/megadetector_v5a.pb
MEGADETECTOR_CONFIDENCE_THRESHOLD=0.2
MEGADETECTOR_API_URL=https://api.lila.science/batch/v1/detect

# Application Configuration
DEBUG=false
FLASK_ENV=production
HOST=0.0.0.0
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/wildlife_camera.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting Configuration
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATE_LIMIT_DEFAULT=1000/hour

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Cloud Storage Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=wildlife-camera-images
AWS_REGION=us-west-2

# Google Cloud Storage Configuration (Optional)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_BUCKET=wildlife-camera-images

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-url
PROMETHEUS_METRICS_PORT=9090

# Development Configuration
DEVELOPMENT=false
TESTING=false